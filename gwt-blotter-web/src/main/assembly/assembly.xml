<assembly>
	<id>assemble-pu</id>
	<formats>
		<format>war</format>
		<!--<format>dir</format>-->
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<fileSets>
		<fileSet>
			<directory>.target/gwt-dealsBlotter</directory>
			<lineEnding>keep</lineEnding>
			<outputDirectory>/</outputDirectory>
			<includes>
				<include>**/**</include>
			</includes>
			<excludes>
				<exclude>**/*.jar</exclude>
				<exclude>**/*.class</exclude>
				<exclude>**/*.war</exclude>
			</excludes>
		</fileSet>
		<fileSet>
			<directory>.target/gwt-dealsBlotter/WEB-INF/classes
			</directory>
			<lineEnding>keep</lineEnding>
			<outputDirectory>WEB-INF/classes</outputDirectory>
			<includes>
				<include>**/*.class</include>
			</includes>
		</fileSet>
	</fileSets>
	<dependencySets>
		<dependencySet>
			<useProjectArtifact>false</useProjectArtifact>
			<useTransitiveDependencies>true</useTransitiveDependencies>
			<useTransitiveFiltering>true</useTransitiveFiltering>
			<outputDirectory>WEB-INF/lib</outputDirectory>
			<includes>
				<include>com.gigaspaces.settlement:common</include>
				<include>commons-collections:commons-collections</include>
				<include>commons-lang:commons-lang</include>
				<include>commons-beanutils:commons-beanutils</include>
			</includes>
		</dependencySet>
		<dependencySet>
			<useProjectArtifact>false</useProjectArtifact>
			<useTransitiveDependencies>false</useTransitiveDependencies>
			<outputDirectory>WEB-INF/lib</outputDirectory>
			<includes>
				<include>com.smartgwt:smartgwt</include>	
				<include>com.google.gwt:gwt-api-checker</include>				
				<include>com.google.gwt:gwt-servlet</include>
				<include>com.google.gwt:gwt-soyc-vis</include>			
				<include>com.google.gwt:gwt-user</include>
				<include>com.google.code.gwt-log:gwt-log</include>
				<include>dom4j:dom4j</include>
			</includes>
		</dependencySet>
	</dependencySets>
</assembly>